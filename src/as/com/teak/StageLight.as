package com.teak{	import flash.display.Sprite;		import com.greensock.TweenNano;		public class StageLight extends Sprite	{		public function StageLight():void		{			this.rotation = newAngle();			run();						TweenNano.delayedCall(15, stopLights);		}		private function run():void		{			TweenNano.to(this, .25 + Math.random() * 1.75, {rotation:newAngle(), onComplete:run});		}		private function stopLights():void		{			TweenNano.killTweensOf(this);		}		private function newAngle():Number		{			return -45 + Math.random() * 90;		}			}}