package com.teak{	import flash.display.Sprite;		import flash.geom.Point;		import com.greensock.TweenNano;	import com.greensock.easing.Linear;		public class Flashes extends Sprite	{		private var TOP_POINT:Point;		private var AREA_WIDTH:Number;		private var AREA_HEIGHT:Number;				public function Flashes(tl:Number, tR:Number,areaWidth:Number, areaHeight:Number):void		{			TOP_POINT = new Point(tl, tR);			AREA_WIDTH = areaWidth;			AREA_HEIGHT = areaHeight;						TweenNano.delayedCall(1, run);		}		public function run():void		{			var flash:CameraFlash = new CameraFlash();			flash.gotoAndPlay("flash");						flash.x = TOP_POINT.x + AREA_WIDTH * Math.random();			flash.y = TOP_POINT.y + AREA_HEIGHT * Math.random();						addChild(flash);									TweenNano.delayedCall(Math.random()/2, run);		}		public function stopFlashes():void		{			TweenNano.killTweensOf(run);		}	}}