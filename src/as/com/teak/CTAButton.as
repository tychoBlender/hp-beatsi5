package com.teak{	import flash.display.Sprite;		import flash.events.Event;	import flash.events.MouseEvent;		import com.greensock.TweenNano;		public class CTAButton extends Sprite	{		private var ARROW_START:Number;		private var MIDDLE_START:Number;		private var RIGHT_START:Number;				public function CTAButton():void		{			ARROW_START = arrow.x;			MIDDLE_START = arrow.middle.x;			RIGHT_START = arrow.right.x;						arrow.left.alpha = 1;			arrow.middle.alpha = .5;			arrow.right.alpha = .2;						this.addEventListener(Event.ADDED_TO_STAGE, init);		}		public function reset():void		{					}		private function init(event:Event):void		{			this.addEventListener(MouseEvent.MOUSE_OVER, over);			this.addEventListener(MouseEvent.MOUSE_OUT, out);			stage.addEventListener(Event.MOUSE_LEAVE, stageOut);		}		private function out(event:MouseEvent):void		{			trace("out");			TweenNano.killTweensOf(arrow);			TweenNano.killTweensOf(arrow.left);			TweenNano.killTweensOf(arrow.middle);			TweenNano.killTweensOf(arrow.right);			TweenNano.killTweensOf(startBlink);						TweenNano.to(arrow, .4, {x:ARROW_START});			TweenNano.to(arrow.middle, .3, {x:MIDDLE_START});			TweenNano.to(arrow.right, .3, {x:RIGHT_START});			arrow.left.alpha = 1;			arrow.middle.alpha = .5;			arrow.right.alpha = .2;			arrow.left.scaleX = arrow.right.scaleX = arrow.middle.scaleX = 1;		}		private function stageOut(event:Event):void		{			out(null);		}		private function over(event:MouseEvent):void		{			trace("over");			TweenNano.killTweensOf(arrow);						TweenNano.to(arrow, .3, {x:ARROW_START + 3});			startBlink();		}		private function startBlink():void		{			TweenNano.to(arrow.left, .2, {delay:0,alpha:1,scaleX:1.2, onComplete:fadeOut, onCompleteParams:[arrow.left, .5]});			TweenNano.to(arrow.middle, .2, {delay:.2,alpha:1,scaleX:1.2,onComplete:fadeOut, onCompleteParams:[arrow.middle, .3 ]});			TweenNano.to(arrow.right, .2, {delay:.4,alpha:1,scaleX:1.2, onComplete:fadeOut, onCompleteParams:[arrow.right, .2]});						TweenNano.delayedCall(.75, startBlink);		}		private function fadeOut(_object:Sprite,_alpha:Number):void		{			TweenNano.to(_object, .1, {alpha:.2,scaleX:1});		}	}}